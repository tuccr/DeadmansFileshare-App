<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DeadmansFileshareAppCSharp.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeadmansFileshareAppCSharp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/logo.png"
           Width="800"
           Height="200"
           Grid.Row="0"/>

        <StackPanel Orientation="Vertical"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Center"
        Spacing="16"
        Grid.Row="1"
        Padding="16"
        ScrollViewer.VerticalScrollBarVisibility="Visible">
            <TextBox x:Name="FirstName"
                     Header="First Name"
                     PlaceholderText="John"
                     Width="400"/>
            <TextBox x:Name="LastName"
                     Header="Last Name"
                     PlaceholderText="Smith"
                     Width="400"/>
            <TextBox x:Name="EmailAddress"
                     Header="Email address"
                     PlaceholderText="johnsmith@email.com"
                     Width="400"/>
            <TextBox x:Name="Username"
                     Header="Username"
                     PlaceholderText="JohnnyS"
                     Width="400"/>
            <PasswordBox x:Name="Password"
                     Header="Password"
                     PlaceholderText="Password!@#123"
                     Width="400"/>
            <PasswordBox x:Name="ConfirmPassword"
                     Header="Confirm Password"
                     PlaceholderText="Password!@#123"
                     Width="400"/>
        </StackPanel>


        <Button Content="Create Account" 
                Click="RegisterButton_Click"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="DodgerBlue"
                Foreground="White"
                FontSize="16pt"/>

        <StackPanel Orientation="Horizontal"
        HorizontalAlignment="Center"
        Spacing="4"
        Grid.Row="3"
        Padding="16">
            <Button Content="Cancel" Click="CancelButton_Click"/>
            <Button Content="I Already have an account" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
