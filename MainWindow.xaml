<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DeadmansFileshareAppCSharp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeadmansFileshareAppCSharp"
    xmlns:views="using:DeadmansFileshareAppCSharp.Views"
    xmlns:models="using:DeadmansFileshareAppCSharp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Deadmans Fileshare">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="Auto"/>
            <!-- App Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TitleBar x:Name="AppTitleBar"
                  Title="Deadman's Fileshare"
                  IsBackButtonVisible="False">
        </TitleBar>

        <!-- App Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
            <Frame x:Name="rootFrame"
                   SourcePageType="views:Home"/>
        </ScrollViewer>
    </Grid>
</Window>
